<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="margin">
        <% if (orders.length > 0) { %>
        <ul>
            <% orders.forEach(order => { %>
            <li>
                <h1># <%= order.id %></h1>
                <ul>
                    <% order.products.forEach(product => { %>
                    <li><%= product.title %> (<%= product.orderItem.quantity %>)</li>
                    <% }) %>
                </ul>
            </li>
            <% }) %>
        </ul>
        <% } else { %>
        <h1>No Orders</h1>
        <% } %>
    </main>
</body>

</html>
