<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs', { isAuthenticated }) %>

    <main class="margin">
        <% if (orders.length > 0) { %>
        <ul class="cart__item-list">
            <% orders.forEach(order => { %>
            <li class="cart__item">
                <h1># <%= order._id %></h1>
                <ul>
                    <% order.products.forEach(product => { %>
                    <li><%= product.productData.title %> (<%= product.quantity %>)</li>
                    <% }) %>
                </ul>
                <a href="/orders/<%= order._id %>">Invoice</a>
            </li>
            <% }) %>
        </ul>
        <% } else { %>
        <h1>No Orders</h1>
        <% } %>
    </main>
</body>

</html>
